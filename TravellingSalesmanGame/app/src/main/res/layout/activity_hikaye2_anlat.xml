<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Game.Hikaye2"
    android:orientation="vertical"
    android:background="@drawable/shape_konuanlatimi">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="22dp">

        <TextView
            android:id="@+id/txtYorum"
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:gravity="center"
            android:text="@string/bilgisayar_hikaye"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_Oyun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_background"
                android:padding="25dp"
                android:text="Oyuna Başlamak İçin Tıklayınız " />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>